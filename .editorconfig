root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# 2 space indentation
[*.{lua,js,ts,jsx,tsx,html,css}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{c,h,cpp,hpp,rs,py}]
indent_style = space
indent_size = 4
