{
  // Basic configuration
  "layer": "top",
  "position": "top",

  // Position and order of modules
  "modules-left": [
    "custom/arch",
    "sway/workspaces",
    "pulseaudio",
    "backlight",
    "idle_inhibitor",
    "sway/window",
  ],
  "modules-center": ["custom/media"],
  "modules-right": [
    "network",
    "bluetooth",
    "battery",
    "clock#date",
    "clock#time",
  ],

  // Modules
  "custom/arch": {
    "format": "ó°£‡",
    "tooltip": false,
  },

  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "ï€¥ {volume}%",
    "format-muted": "î»¨",
    "format-icons": {
      "headphones": "ï€¥",
      "handsfree": "ï€¥",
      "headset": "ï€¥",
      "muted": "",
      "default": ["ï€¦", "ï€§", "ï€¨"],
    },
    "on-click": "pavucontrol",
    "tooltip": false,
  },

  "backlight": {
